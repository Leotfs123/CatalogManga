<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cardviewdets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="581dp"

        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/MangaCoverID_details"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@android:color/background_dark" />

            <TextView
                android:id="@+id/MangaScrapeDateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/MangaTitleID_details"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/MangaCoverID_details"
                android:paddingLeft="5dp"
                android:text="Released" />

            <TextView
                android:id="@+id/MangaTitleID_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="@+id/MangaCoverID_details"
                android:paddingLeft="5dp"
                android:text="Manga Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MangaTypeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MangaTitleID_details"
                android:layout_toRightOf="@+id/MangaCoverID_details"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>