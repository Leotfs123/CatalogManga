<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedBEnd_toBottomOf="parent"
        app:layout_constrainedBottom_toEndOf="parent"
        app:layout_constrainedStar_toStartOf="parent"
        app:layout_constrainedTop_toTopOf="parent" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/MangaCoverID_details"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="android:color/background_dark"/>

        <TextView
            android:id="@+id/MangaScrapeDateID"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/MangaCoverID_details"
            android:text="Released"
            android:layout_below="@id/MangaTitleID_details"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/MangaTitleID_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="@+id/MangaCoverID_details"
            android:paddingLeft="5dp"
            android:text="Manga Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/MangaTypeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MangaTitleID_details"
            android:layout_toRightOf="@+id/MangaCoverID_details"
            android:paddingLeft="5dp"
            android:textStyle="bold">




    </TextView>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>