<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:cardCornerRadius="4dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mangaImageID"
            android:background="@android:color/background_dark"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/mangaTitleID"
            android:paddingLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/mangaImageID"
            android:text="Manga title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/mangaScrapeDateID"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/mangaImageID"
            android:text="Released"
            android:layout_below="@id/mangaTitleID"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/mangaCatID"
            android:padding="5dp"
            android:text="Category"
            android:layout_below ="@id/mangaScrapeDateID"
            android:layout_toRightOf="@id/mangaImageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
